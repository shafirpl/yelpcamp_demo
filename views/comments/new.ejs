<div class = "container">

    <h1 style = "text-align:center;">Add New Comment to <%=campground.name %></h1>

    <div style="width:30%; margin:25px auto;">

        <form action="/yelpcamp/campgrounds/<%= campground._id %>/comments" method = "POST">
        <div class = "form-group">
            <input type="text" name="comments[text]" placeholder="text" class = "form-control"/>
        </div>

        <div class = "form-group">
            <button class = "btn btn-lg btn-default btn-block btn-primary">Submit</button>
        </div>

    </form>
    <a href = "/yelpcamp/campgrounds">Go Back</a>
    </div>

</div>


