<% include ../partials/headers %>

<div class = "container">
 
    <h1 style = "text-align:center;">EDIT <%=campground.name %></h1>

    <div style="width:30%; margin:25px auto;">
        
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method = "POST">
        <div class = "form-group">
            <input type="text" name="campground[name]" class = "form-control"
            value = "<%=campground.name %>">
        </div>
        
        <div class = "form-group">
            <input type="text" name="campground[image]" placeholder="image url" class = "form-control"
            value = "<%=campground.image %>"/>
        </div>
        
        <div class = "form-group">
            <input type="text" name="campground[description]" value = "<%=campground.description %>" class = "form-control"/>
        </div>
        
        <div class = "form-group">
            <button class = "btn btn-lg btn-default btn-block btn-primary">Submit</button>
        </div>
        
    </form> 
    <a href = "/campgrounds">Go Back</a>
    </div>

</div>


<% include ../partials/footers %>